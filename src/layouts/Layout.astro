---
import "@fontsource-variable/cabin";
import "@fontsource/questrial";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html class="h-full transition" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full px-4 sm:px-15vw text-gray-900 antialiased transition">
    <slot />
  </body>
</html>
<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    h1,
    h2,
    h3,
    h4 {
      @apply font-headings;
    }
    h1:not(.no-dot)::after,
    h2:not(.no-dot)::after {
      @apply text-accent-700;
      content: ".";
    }

    a:not(.icon) {
      @apply no-underline bg-gradient-to-t from-accent-700/75 to-accent-700/75 bg-bottom bg-no-repeat bg-[length:100%_2px];

      background-position: 0% 100%;
      background-repeat: no-repeat;
      background-size: 100% 2px;
    }
    a:not(.icon):hover,
    a:not(.icon):focus-visible {
      @apply from-accent-700 to-accent-700;
    }
  }
</style>
