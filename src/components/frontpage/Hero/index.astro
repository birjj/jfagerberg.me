---
import Background from "./background/index.astro";
import ScrollPrompter from "./ScrollPrompter.astro";
---

<main class="hero">
  <Background class="hero__canvas" />
  <section class="hero__content">
    <h1
      class="hero__title"
    >
      Hi :<span class="accent">)</span>
    </h1>
  </section>
  <ScrollPrompter />
</main>
<style>
  .hero {
    width: 100%;
    height: 100vh;
    padding-inline: 5vw;
  }
  @media (min-width: 384px) {
    .hero {
      padding-inline: 10vw;
    }
  }
  @media (min-width: 640px) {
    .hero {
      padding-inline: 15vw;
    }
  }
  .hero__canvas {
    position: absolute;
    width: inherit;
    height: inherit;
    inset: 0;
    z-index: -1;
  }
  .hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-block: 10vh;
    max-width: 65ch;
    height: 100vh;
  }
  .hero__title {
    font-size: 2.25rem;
    line-height: 2.5rem;
    font-weight: bold;
    margin: 0;
  }
  @media (min-width: 384px) {
    .hero__title {
      font-size: 3.75rem;
      line-height: 1;
    }
  }
  @media (min-width: 640px) {
    .hero__title {
      font-size: 4.5rem;
      line-height: 1;
    }
  }
  .accent { color: var(--c-accent); }
</style>