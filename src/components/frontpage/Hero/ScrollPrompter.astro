<figure class="scroll-indicator">
  <div class="wheel"></div>
</figure>

<style>
  .scroll-indicator {
    position: absolute;
    left: 50%;
    bottom: 1rem;
    margin: 0;
    display: flex;
    justify-content: center;
    padding: 0.25rem;
    border: 2px solid oklch(var(--c-text-oklch) / 25%);
    border-radius: 1rem;
    width: 1.25rem;
    height: 1.75rem;
    pointer-events: none;
    transition: all 0.15s cubic-bezier(.4,0,.2,1);
  }
  body.has-scrolled .scroll-indicator {
    opacity: 0;
  }
  .wheel {
    width: 0.25rem;
    height: 0.5rem;
    background: oklch(var(--c-text-oklch) / 25%);
    border-radius: 99999px;
    animation: scroll 2s infinite;
    transition: all 0.15s cubic-bezier(.4,0,.2,1);
  }

  @keyframes fade-in {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes scroll {
    0% {
      transform: translateY(0%);
      opacity: 1;
    }
    50% {
      transform: translateY(0%);
      opacity: 1;
    }
    75% {
      transform: translateY(100%);
      opacity: 0;
    }
    76% {
      transform: translateY(-100%);
      opacity: 0;
    }
    100% {
      transform: translateY(0%);
      opacity: 1;
    }
  }
</style>

<script>
  const hasScrolledListener = () => {
    if (window.scrollY <= 0) { return; }
    document.body.classList.add("has-scrolled");
    window.removeEventListener("scroll", hasScrolledListener);
  };
  window.addEventListener("scroll", hasScrolledListener);
</script>
