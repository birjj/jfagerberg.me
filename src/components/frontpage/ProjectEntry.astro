---
import { Icon } from "astro-icon";

export interface Props {
  icon: string;
  href?: string;
  title: string;
  tags?: string[];
}

const { icon, href, title, tags = [] } = Astro.props;
---

<div class="wrapper">
  {
    href ? (
      <a
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        class="icon"
        aria-label={`Link to the ${title} project`}
      >
        <Icon class="icon-svg" name={icon} />
      </a>
    ) : (
      <Icon name={icon} class="icon icon-svg" />
    )
  }
  <div class="content">
    <h3 class="title">
      {
        href ? (
          <a href={href} target="_blank" rel="noopener noreferrer">
            {title}
          </a>
        ) : (
          title
        )
      }
    </h3>
    <slot />
  </div>
</div>
<style scoped>
  .wrapper {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-block: 1rem 2rem;
  }

  .icon {
    flex-shrink: 0;
    margin-right: 1.5rem;
  }
  .icon-svg {
    width: 5rem;
    height: 5rem;
    display: block;
  }

  .content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  .title {
    margin: 0;
    font-size: 1.25em;
    line-height: 1.6;
  }
  .content > :global(:last-child) {
    margin-block-end: 0;
  }
</style>
